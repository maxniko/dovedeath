<%= form_for(@post, :html => { :class => "form"}) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
    <div class="group">
      <div class="fieldWithErrors">
       <%= f.label :titulo, :class => "label" %>
     </div>
    <%= f.text_field :titulo,:class =>  "text_field" %>
  </div>
  <div class="group">
    <%= f.label :cuerpo,:class => "label" %>
    <%= f.text_area :cuerpo, :cols=> "80", :rows=> "10", :class=> "text_area"%>
    <span class="description">Write here a long text</span>
  </div>
  <div class="group">

<%= f.select(:categorium_id, @categoria, {:prompt => "#{t "categoria.vista.form.por_defecto"}",
                                           :order => "nombre"} ) %>
<%= f.hidden_field(:usuario_id, :value => current_usuario.id )%>
  </div>
</br>
  <div class="group navform wat-cf">
    <button class="button" type="submit">
      <%= image_tag("icons/tick.png", :alt=> "Guardar")%>Guardar
    </button>
    <a href="/posts" class="button">
      <%= image_tag("icons/cross.png", :alt=> "Cancelar")%> Cancelar
    </a>

  </div>



  <!--div class="actions">
    <%= f.submit %>
  </div-->
<% end %>

