
      <div class="block" id="block-login">
        <h2>Ingresar</h2>
        <div class="content login">

          <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => "form"}) do |f| %>

            <div class="group wat-cf">
              <div class="left">
                <%= f.label :email,:class =>  "label" %>
              </div>

              <div class="right">
                <%= f.email_field :email ,:class =>  "text_field" %>
              </div>
            </div>
            <div class="group wat-cf">
              <div class="left">
                <%= f.label :password, :class =>  "label" %>
              </div>

              <div class="right">
                <%= f.password_field :password ,:class =>  "text_field"%>
              </div>
            </div>
           <% if devise_mapping.rememberable? -%>
           <div class="group wat-cf">
              <div class="left">
                <%= f.label :recordarme, :class =>  "label"   %>
              </div>

              <div class="right">
                <%= f.check_box :remember_me, :class =>  "checkbox" %>
              </div>
            </div>
            <% end -%>
            <div class="group navform wat-cf">
              <div class="right">
                <%#= image_submit_tag("icons/key.png")  %>
                <button class="button" type="submit">
                  <%= image_tag("icons/key.png", :alt=> "Guardar")%> Login
                </button>

              </div>
            </div>
          <% end %>
        </div>
      </div>

