
  <div class="block" id="block-signup">
  <h2>Actualizando datos</h2>
  <div class="content">

    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :class => "form" }) do |f| %>

    <% if resource.errors.any? %>
      <div id="error_explanation">
        <div class="flash">
          <div class="message error">
            <% case resource.errors.count
               when 1 %>
               <h3><%= resource.errors.count  %> error prohibe que puedas actualizar tu cuenta:</h3>
            <% else %>
               <h3><%= resource.errors.count  %> errores prohiben que puedas actualizar tu cuenta:</h3>
            <% end %>
            <% resource.errors.full_messages.each do |msg| %>
              <p><%= msg %></p>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
      <div class="group wat-cf">
        <div class="left">
          <%= f.label :nombre,:class =>  "label" %>
        </div>
        <div class="right">
          <%= f.text_field :nombre,:class =>  "text_field" %>
          <span class="description">Ex: web-app-theme</span>
        </div>
      </div>
      <div class="group wat-cf">
        <div class="left">
          <%= f.label :apellido,:class =>  "label" %>
        </div>
        <div class="right">
          <%= f.text_field :apellido,:class =>  "text_field" %>
          <span class="description">Ex: test@example.com</span>
        </div>
      </div>
      <div class="group wat-cf">
        <div class="left">
          <%= f.label :email,:class =>  "label" %>
        </div>
        <div class="right">
          <%= f.email_field :email,:class =>  "text_field" %>
          <span class="description">Must contains the word 'yeah'</span>
        </div>
      </div>
      <div class="group wat-cf">
        <div class="left">
          <%= f.label :password ,:class =>  "label"%><i>(deja en blanco si no lo quieres cambiar)</i>
        </div>
        <div class="right">
          <%= f.password_field :password,:class =>  "text_field" %>
          <span class="description">Must contains the word 'yeah'</span>
        </div>
      </div>
      <div class="group wat-cf">
        <div class="left">
          <%= f.label :password_confirmation,:class =>  "label" %>
        </div>
        <div class="right">
          <%= f.password_field :password_confirmation ,:class =>  "text_field"%>
          <span class="description">Must contains the word 'yeah'</span>
        </div>
      </div>
      <div class="group wat-cf">
        <div class="left">
          <%= f.label :current_password,:class =>  "label" %><i>(necesitamos tu password para confirmar los cambios)</i>
        </div>
        <div class="right">
          <%= f.password_field :current_password ,:class =>  "text_field"%>
          <span class="description">Must contains the word 'yeah'</span>
        </div>
      </div>
      <div class="group navform wat-cf">
        <button class="button" type="submit">
          <%= image_tag("icons/tick.png", :alt=> "Guardar")%> Guardar
        </button>
      </div>
    <% end %>
    <!--%= render :partial => "devise/shared/links" %-->
    <p>Infeliz? <%= link_to "Cancelar mi cuenta", registration_path(resource_name), :confirm => "Estás seguro?", :method => :delete %>.</p>
    <%= link_to "Atrás", :back %>
  </div>
</div>

