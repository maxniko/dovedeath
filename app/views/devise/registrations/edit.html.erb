<div id="box">
  <div class="block" id="block-signup">
  <h2>Registrarse</h2>
  <div class="content">

    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= devise_error_messages! %>
      <div class="group wat-cf">
        <div class="left">
          <%= f.label :nombre %>
        </div>
        <div class="right">
          <%= f.text_field :nombre %>
          <span class="description">Ex: web-app-theme</span>

        </div>
      </div>
      <div class="group wat-cf">
        <div class="left">
          <%= f.label :apellido %>
        </div>
        <div class="right">
          <%= f.text_field :apellido %>

          <span class="description">Ex: test@example.com</span>
        </div>
      </div>
      <div class="group wat-cf">
        <div class="left">
          <%= f.label :email %>
        </div>
        <div class="right">

          <%= f.email_field :email %>
          <span class="description">Must contains the word 'yeah'</span>
        </div>
      </div>

      <div class="group wat-cf">
        <div class="left">
          <%= f.label :password %><i>(deja en blanco si no lo quieres cambiar)</i>
        </div>
        <div class="right">

          <%= f.password_field :password %>
          <span class="description">Must contains the word 'yeah'</span>
        </div>
      </div>


     <div class="group wat-cf">
        <div class="left">
          <%= f.label :password_confirmation %>
        </div>
        <div class="right">

          <%= f.password_field :password_confirmation %>
          <span class="description">Must contains the word 'yeah'</span>
        </div>
      </div>

<div class="group wat-cf">
        <div class="left">
          <%= f.label :current_password %><i>(necesitamos tu password para confirmar los cambios)</i>
        </div>
        <div class="right">

          <%= f.password_field :current_password %>
          <span class="description">Must contains the word 'yeah'</span>
        </div>
      </div>

      <div class="group navform wat-cf">
        <button class="button" type="submit">
          <%= image_tag("icons/tick.png", :alt=> "Guardar")%> Signup
        </button>
      </div>
    <% end %>
  <%= render :partial => "devise/shared/links" %>

<p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), :confirm => "Are you sure?", :method => :delete %>.</p>
<%= link_to "Back", :back %>
  </div>
  </div>
</div>

