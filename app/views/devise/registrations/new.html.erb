  <div class="block" id="block-signup">
  <h2>Registrarse</h2>
  <div class="content">

    <%= form_for(resource, :as => resource_name,:url => registration_path(resource_name), :html => { :class => "form"}) do |f| %>
    <% if resource.errors.any? %>
      <div id="error_explanation">
        <div class="flash">
          <div class="message error">
            <% case resource.errors.count
               when 1 %>
               <h3><%= resource.errors.count  %> error prohibe que puedas registrarte:</h3>
            <% else %>
               <h3><%= resource.errors.count  %> errores prohiben que puedas registrarte:</h3>
            <% end %>
            <% resource.errors.full_messages.each do |msg| %>
              <p><%= msg %></p>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
      <div class="group wat-cf">
        <div class="left">
         <label class="label">Nombre</label>
        </div>
        <div class="right">
          <%= f.text_field :nombre,:class =>  "text_field"%>
          <span class="description">Ex: web-app-theme</span>

        </div>
      </div>
      <div class="group wat-cf">
        <div class="left">
          <%= f.label :apellido,:class =>  "label" %>
        </div>
        <div class="right">
          <%= f.text_field :apellido,:class =>  "text_field" %>

          <span class="description">Ex: test@example.com</span>
        </div>
      </div>
      <div class="group wat-cf">
        <div class="left">
          <%= f.label :email,:class =>  "label" %>
        </div>
        <div class="right">

          <%= f.email_field :email,:class =>  "text_field" %>
          <span class="description">Must contains the word 'yeah'</span>
        </div>
      </div>

      <div class="group wat-cf">
        <div class="left">
          <%= f.label :password,:class =>  "label" %>
        </div>
        <div class="right">

          <%= f.password_field :password,:class =>  "text_field" %>
          <span class="description">Must contains the word 'yeah'</span>
        </div>
      </div>


     <div class="group wat-cf">
        <div class="left">
          <%= f.label :password_confirmation,:class =>  "label" %>
        </div>
        <div class="right">

          <%= f.password_field :password_confirmation ,:class =>  "text_field"%>
          <span class="description">Must contains the word 'yeah'</span>
        </div>
      </div>
        <%= f.hidden_field :admin, :value=>"false" %>

      <div class="group navform wat-cf">
        <button class="button" type="submit">
          <%= image_tag("icons/tick.png", :alt=> "Guardar")%> Registrarse
        </button>
      </div>
      <% end %>
      <%= render :partial => "devise/shared/links" %>
    </div>
  </div>

