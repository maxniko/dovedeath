<%= form_for(@usuario, :html => { :class => "form"}) do |f| %>
  <% if @usuario.errors.any? %>
     <div id="error_explanation">
      <div class="flash">
        <div class="message error">
          <% case @usuario.errors.count
             when 1 %>
             <h3><%= @usuario.errors.count  %> error prohibe que el usuario sea guardado:</h3>
          <% else %>
             <h3><%= @usuario.errors.count  %> errores prohiben que el usuario sea guardado:</h3>
          <% end %>
          <% @usuario.errors.full_messages.each do |msg| %>
            <p><%= msg %></p>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>

   <div class="group">
    <%= f.label :nombre,:class => "label" %>
    <%= f.text_field :nombre,:class =>  "text_field" %>
  </div>
  <div class="group">
    <%= f.label :apellido,:class => "label" %>
    <%= f.text_field :apellido,:class =>  "text_field" %>
  </div>

   <div class="group">
    <%= f.label :email,:class => "label" %>
    <%= f.text_field :email,:class =>  "text_field" %>
  </div>
  <%if current_usuario.id != @usuario.id %>
 <div class="group">
    <%= f.label :admin,:class => "label" %>
    <%= f.check_box :admin, :class => "check_box" %>
  </div>
  <% end %>

  <div class="group navform wat-cf">
     <button class="button" type="submit">
      <%= image_tag("icons/tick.png", :alt=> "Guardar")%>Guardar
    </button>
    <a href="/usuarios" class="button">
      <%= image_tag("icons/cross.png", :alt=> "Cancelar")%> Cancelar
    </a>

  </div>
<% end %>

